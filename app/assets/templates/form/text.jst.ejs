
  <form>
    <input type='hidden' name='post[content_type]'>
    <input type='text' id='text-post-title' class='line-22 nofocus nobord' name='content[title]' placeholder='Title'>

    <textoptions class=''>
      <ul class='editoptions'>
        <li class='available' data-action='bold'><i class='fa fa-bold'></i></li>

        <li class='available' data-action='italic'><i class='fa fa-italic'></i></li>

        <li class='available' data-action='strikethrough'><i class='fa fa-strikethrough'></i></li>

        <li class='unavailable needstring new-link-form' data-action='linkForm'><i class='fa fa-link'></i></li>
        <linkform class='hide specbox bk-white black nobord '>
          <input class='round-small nobord' type='text' placeholder='URL'>
          <button class='bk-white round-small nobord'>Add Link</button>
        </linkform>

        <li class='unavailable needstring' data-action='unlink'><i class='fa fa-unlink'></i></li>

        <li class='available' data-action='insertorderedlist'><i class='fa fa-list-ol'></i></li>

        <li class='available' data-action='insertunorderedlist'><i class='fa fa-list-ul'></i></li>

        <li class='available' id='new-photo-icon' data-action='photo'><i class='fa fa-camera'></i></li>
        <input class='hide' type='file' id='new-photo-src'>


        <li class='available' data-action='html'><i class='fa fa-html5'></i></li>
      </ul>
    </textoptions>
    <texttextarea class='nofocus thick' contenteditable="true" tabindex='1' name='content[text]'>
    </texttextarea>

    <imageform class='hide hidden specbox'>
    </imageform>
    <imageprogressbar class='hide white'>
      <p>Processing</p>
      <progressmeter>
        <p>Processing</p>
      </progressmeter>
    </imageprogressbar>


    <textarea id='htmlEdit' class='hide hidden'></textarea>

  </form>

    <%= JST['form/publish']() %>
